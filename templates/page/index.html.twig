{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Page index{% endblock %}

{% block body %}

    <a class="btn btn-outline-success float-end" href="{{ path('page_new') }}">Create new</a>

    <h1>Page index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td><a href="{{ path('page_show2', {'slug': page.slug}) }}">{{ page.title }}</a></td>
                <td>
                    <a href="{{ path('page_show', {'id': page.id}) }}">show</a>
                    <a href="{{ path('page_edit', {'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
