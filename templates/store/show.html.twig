{% extends 'base.html.twig' %}

{% block title %}Store{% endblock %}

{% block body %}
    <h1>Store</h1>

    <img src="{{ uploaded_asset(store.imagePath) }}" alt="logo" width="200px">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ store.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ store.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ store.imageFilename }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('store_index') }}">back to list</a>

    <a href="{{ path('store_edit', {'id': store.id}) }}">edit</a>

    {{ include('store/_delete_form.html.twig') }}
{% endblock %}
